package overFlow.GUI;

import java.awt.Color;


//An inner class for all GUI elements.
public class GUI extends javax.swing.JFrame {

int fHeight;
int fWidth;

//String hintString = new String("Current object that can be created n\ (but don't all work right) \n - toggle \n - slider (if you move it after creating it is messed up");





public GUI() {
 initComponents();
}

void initComponents() {
 MainWindowGraphics mainWindowGraphics = new MainWindowGraphics();

 gpanel.setBackground(Color.WHITE);
 Object rootGroup;
gpanel.setScene(rootGroup);
 gpanel.setPreferredSize(new Dimension(800, 600));    //mouse events for whole scene

 editModeLabel.setFont(new Font("Helvetica", Font.PLAIN, 14));
 editModeLabel.setLocation(new Point(int(50), int(20)));
 editModeLabel.setAntialiasingHint(RenderingHints.VALUE_TEXT_ANTIALIAS_ON);
 String s = new String();
 editModeLabel.setText("Edit Mode");
 editModeLabel.setFillPaint(Color.BLACK);
 rootGroup.add(editModeLabel);

 getContentPane().add(gpanel);
 pack();
}

////get the location of the current FXShape
Point2D.Double shapeLocation(FXShape s) {
 Rectangle2D rect = s.getBounds();
 Point2D.Double p = new Point2D.Double(rect.getX() + (rect.getWidth() - rect.getX())/2, rect.getY());
 return p;
}





}





































